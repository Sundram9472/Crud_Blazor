@page "/DeleteStudent/{Id}"

@using Crud_Blazor.Data
@inject ClgStudentDetailsService studentService
@inject NavigationManager NavigationManager
<h3>Are you sure want to delete this?</h3>
<form>
    <div class="row">
        <div class=" col-md-8">
            <div class="form-group">
                <label>Id:</label>
                <label>@obj.Id</label>
            </div>
            <div class="form-group">
                <label>FirstName:</label>
                <label>@obj.FirstName</label>
            </div>
            <div class="form-group">
                <label>LastName:</label>
                <label>@obj.LastName</label>
            </div>
            <div class="form-group">
                <label>Gender:</label>
                <label>@obj.Gender</label>
            </div>
            <div class="form-group">
                <label>Gmail:</label>
                <label>@obj.Gmail</label>
            </div>
            <div class="form-group">
                <label>ProgrammingLanguage:</label>
                <label>@obj.ProgrammingLanguage</label>
            </div>
            <div class="form-group">
                <label>City:</label>
                <label>@obj.City</label>
            </div>
        </div>

    </div>

    <div class="row">
        <div class="col-md-4">
            <div class="form-group">
                <input type="button" class="btn btn-danger" @onclick="@DeleteEmployee" value="Delete" />
                <input type="button" class="btn btn-primary" @onclick="@Cancel" value="Cancel" />
            </div>
        </div>
    </div>
</form>

@code
{

    [Parameter]
    public string Id { get; set; }

    ClgStudentDetails obj = new ClgStudentDetails();

    protected override async Task OnInitializedAsync()
    {
        obj = await Task.Run(() => studentService.GetStudentAsync(Convert.ToInt32(Id)));
    }
    protected async void DeleteEmployee()
    {
        await studentService.DeleteStudentAsync(obj);
        NavigationManager.NavigateTo("Student");

    }
    void Cancel()
    {
        NavigationManager.NavigateTo("Student");
    }
}
