@page
@model Crud_Blazor.Account.LoginModel
@{
    ViewData["Title"] = "Log in";
}
<div class="row" id="content">
    <div class="col-md-5">
        <section>
            <form id="account" method="post">
                <hr />
                <div asp-validation-summary="All" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="modal.UserName" class="text-white"></label>
                    <input asp-for="modal.UserName" class="form-control" />
                    <span asp-validation-for="modal.UserName" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="modal.PassWord" class="text-white"></label>
                    <input asp-for="modal.PassWord" class="form-control" />
                    <span asp-validation-for="modal.PassWord" class="text-danger"></span>
                </div>
                <div class="row">
                  <div class="col-sm">
                    <p class="text-white">New User? <a asp-page="./Register" class="text-light"><u>Sign Up</u></a></p>
                  </div>
                </div>
                <div class="row">
                    <div class="col-sm">
                         <button type="submit" id="LogIn" aria-label="Sign In">Sign In</button>
                    </div>
                </div>        
            </form>
        </section>
    </div>
    <div class="col-md-6 col-md-offset-2">
        <section>
            <h4>SoftProdigy</h4>
            <hr />
            <p style="font-family:'Times New Roman', Times, serif">MAKE YOUR BUSINESS A PART OF THE DIGITAL REVOLUTION WITH US!</p>
        </section>
    </div>
</div>

<div aria-live="polite" aria-atomic="true" style="position: relative; min-height: 200px;" id="login_toast">
  <div class="toast" style="position: absolute; top: 0; right: 0;">
    <div class="toast-header">
      <button type="button" class="ml-2 mb-1 close" data-dismiss="toast" aria-label="Close">
        <span aria-hidden="true">&times;</span>
      </button>
    </div>
    <div class="toast-body">
      Successfull Log In !
    </div>
  </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <script src="~/Student.js"></script>
}

<style>
    #LogIn{
        border: none;
        padding: 7px 100px;
        text-align: center;
        color: white;
        background: #0081cc;
        border-radius: 40px;
        margin-left: 19px;
    }

    body {
        background-color:white;
    }
    
    #content {
        margin-bottom: 15px;
        background-color:white;
        box-shadow: 0px 0px 5px rgb(163, 194, 194);
        padding: 30px;
    }
    #account {
        margin-bottom: 15px;
        background: #006097;
        box-shadow: 0px 0px 2px rgb(51, 100, 153);
        padding: 30px;
    }
  
</style>
