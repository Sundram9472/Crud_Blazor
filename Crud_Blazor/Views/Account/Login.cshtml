@model LoginModal
<div class="row" id="content">
    <div class="col-md-5">
        <section>
            <form id="account" method="post">
                <hr />
                <div asp-validation-summary="All" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="Input.Email" class="text-white"></label>
                    <input asp-for="Input.Email" class="form-control" />
                    <span asp-validation-for="Input.Email" class="textdanger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Input.Password" class="text-white"></label>
                    <input asp-for="Input.Password" class="form-control" />
                    <span asp-validation-for="Input.Password" class="text-danger"></span>
                </div>
                <div class="row">
                  <div class="col-sm">
                    <p class="text-white">New User? <a asp-page="./Register" asp-route-returnUrl="@Model.ReturnUrl" class="text-light"><u>Sign Up</u></a></p>
                  </div>
                  <div class="col-sm">
                    <a class="text-white" id="forgot-password" asp-page="./ForgotPassword">Forgot password?</a>
                  </div>
                </div>
                <div class="row">
                    <div class="col-sm">
                         <button type="submit" id="LogIn" aria-label="Sign In">Sign In</button>
                    </div>
                </div>          
            </form>
        </section>
    </div>
    <div class="col-md-6 col-md-offset-2">
        <section>
            <h4>SoftProdigy</h4>
            <hr />
            <p style="font-family:'Times New Roman', Times, serif">MAKE YOUR BUSINESS A PART OF THE DIGITAL REVOLUTION WITH US!</p>
        </section>
    </div>
</div>

@section Scripts {
